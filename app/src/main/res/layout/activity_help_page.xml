<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".HelpPage">

    <!-- ===== HEADER ===== -->
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingTop="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/goBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/img_1" />

        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif"
            android:text="Help &amp; Support"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- ===== CONTENT AREA ===== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Introductory Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frequently Asked Questions"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Find answers to common questions below."
                android:textColor="#A8A7C4"
                android:textSize="16sp" />

            <!-- FAQ Item 1 -->
            <com.google.android.material.card.MaterialCardView
                style="@style/FaqCard">
                <LinearLayout style="@style/FaqCard.Content">
                    <TextView
                        style="@style/FaqCard.Question"
                        android:text="How does the Pomodoro Timer work?" />
                    <TextView
                        style="@style/FaqCard.Answer"
                        android:text="The Pomodoro Timer helps you focus by breaking down work into intervals. A standard session is 25 minutes of focused work followed by a 5-minute break. After four sessions, you get a longer 15-minute break." />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- FAQ Item 2 -->
            <com.google.android.material.card.MaterialCardView
                style="@style/FaqCard">
                <LinearLayout style="@style/FaqCard.Content">
                    <TextView
                        style="@style/FaqCard.Question"
                        android:text="How do I create a new flashcard deck?" />
                    <TextView
                        style="@style/FaqCard.Answer"
                        android:text="From the Homepage, tap the '+' button in the top-right corner. This will take you to a page where you can name your new deck and start adding question-and-answer pairs." />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- FAQ Item 3 -->
            <com.google.android.material.card.MaterialCardView
                style="@style/FaqCard">
                <LinearLayout style="@style/FaqCard.Content">
                    <TextView
                        style="@style/FaqCard.Question"
                        android:text="Can I edit or delete a deck?" />
                    <TextView
                        style="@style/FaqCard.Answer"
                        android:text="Yes. On the Homepage, tap and hold on any deck to see options for editing its name or deleting it permanently." />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Contact Us Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Still need help?"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="If you can't find the answer you're looking for, feel free to contact our support team."
                android:textColor="#A8A7C4"
                android:textSize="16sp" />

            <Button
                android:id="@+id/contact_support_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/pink"
                android:text="Contact Support"
                app:cornerRadius="12dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
